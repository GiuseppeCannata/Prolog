fine(fine).
trova_posizione:-
    read(Lista),
    main(Lista).

main(Lista):-
    nl,write('Dai elemento: '),
    read(Elemento),
    \+ fine(Elemento),
    trova(Lista,Elemento,1,Pos),
    verifica(Pos,Lista).

main(_).  %per fallimento del fine

verifica(Pos,Lista):-
    number(Pos),   %vede se Pos è istanziato con un numero, se non è istanziato allora l elelemento non è contenuto nella lista
    write('Pos elemento '),write(Pos),nl,
    main(Lista).

verifica(_,Lista):-   %quando fallisce number(Pos)
    write('elemento non presente nella lista'),
    main(Lista).


trova([],_,_,_). %per quando la lista è scorsa tutta e l elemento non è trovato
trova([T|C],Elemento, Acc, Pos):-
    Pos1 is Acc+1,
    \+ Elemento = T,
    trova(C,Elemento, Pos1 ,Pos).
trova(_,_,Pos,Pos).

